<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/accepted_tests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:text="Accepted tests"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/show_all_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:fontFamily="@font/roboto_bold"
            android:text="Show all (6)"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/accepted_tests"
            app:layout_constraintBottom_toBottomOf="@+id/accepted_tests"
            android:layout_marginEnd="16dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragRcView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/accepted_tests"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/recycler_view_item_1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:text="New Comments"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragRcView1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragRcView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/new_comments"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/recycler_view_item_2"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>