<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sorting1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="SORTING"
        android:fontFamily="@font/roboto_black"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sorting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:drawableStart="@drawable/tune_blue"
        android:drawableEnd="@drawable/black_right_arrow"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Sorting"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sorting1"
        tools:layout_editor_absoluteX="0dp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/newest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/sorting2"
        app:layout_constraintBottom_toBottomOf="@+id/sorting2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="36dp"
        android:text="Newest"
        android:textSize="12dp"
        android:drawablePadding="8dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/categories1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sorting2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="CATEGORIES"
        android:fontFamily="@font/roboto_black"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/arts_and_entertainment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/categories1"
        android:layout_marginTop="16dp"
        android:text="Arts and Entertainment"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableStart="@drawable/orange_brush"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:drawablePadding="8dp"
        android:background="@color/white"
        />
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/arts_and_entertainment"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/single_chip_layout"
            />
    </com.google.android.material.chip.ChipGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/automotive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup1"
        android:layout_marginTop="16dp"
        android:text="Automotive"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableStart="@drawable/car_blue"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:drawablePadding="8dp"
        android:background="@color/white"
        />
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/automotive"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/single_chip_layout"
            />
    </com.google.android.material.chip.ChipGroup>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/community_and_government"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup2"
        android:layout_marginTop="16dp"
        android:text="Community &amp; Government"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableStart="@drawable/bank_pink"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:drawablePadding="8dp"
        android:background="@color/white"
        />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            app:layout_constraintEnd_toStartOf="@+id/apply_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/community_and_government" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apply_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="APPLY"
            app:layout_constraintBottom_toBottomOf="@+id/cancel_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cancel_button"
            android:backgroundTint="#3850CA"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/cancel_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>